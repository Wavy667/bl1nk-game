draw_set_font(font_lvltext);

switch (room) {
	case rm_level01:
		draw_set_halign(fa_center);
		draw_set_color(c_black);
		draw_text(x, y, "Welcome to BL1NK!");
		draw_text(x, y+16, "To reset your position, Blink with space!");
		draw_text(x, y+32, "If you ever are actually stuck or softlocked,");
		draw_text(x, y+40, "reset with backspace!");
		break;
	case rm_level02:
		draw_set_halign(fa_center);
		draw_set_color(c_white);
		draw_text(x, y, "Sometimes, you may need to Blink to get to your");
		draw_text(x, y+8, "destination faster...");
		break;
	case rm_level03:
		draw_set_halign(fa_center);
		draw_set_color(c_black);
		draw_text(x, y, "Some boxes reset when you Blink too...");
		draw_text(x, y+16, "Keep that in mind!");
		break;
	case rm_levelend:
		draw_set_halign(fa_center);
		draw_set_color(c_black);
		draw_set_font(font_end);
		draw_text(x, y, "The End! Thanks for playing!");
		draw_set_font(font_lvltext);
		draw_text(x, y+32, "For now, at least...");
		break;
}




















































































































































































































































































































































































































