paused = false;
surf_paused = -1;

#region config file i/o
global.dsm_settings = ds_map_create();

#macro CONFIG	global.dsm_settings

ini_open("game_config.ini");

var _cfg = ini_read_string("Game Config", "cfg", "");

if (_cfg != "") {
	ds_map_read(CONFIG, _cfg);
} else { // set default values if there's no config
	ds_map_add(CONFIG, "fscreen", [0, ["Disabled", "Enabled"]]);
	ds_map_add(CONFIG, "sfx_vol", [9, [0, 10]]);
	ds_map_add(CONFIG, "bgm_vol", [10, [0, 10]]);
}

ini_close();

// might be hacky but idk
var _fscreen_arr = CONFIG[? "fscreen"];
window_set_fullscreen(_fscreen_arr[0]);
#endregion
#region pausing
function pause() {
	paused = !paused;
	if (!paused) {
		instance_activate_all();
		surface_free(surf_paused);
		surf_paused = -1;
		instance_destroy(obj_menu);
	} else {
		instance_create_depth(0,0,0,obj_menu);
	}
}
#endregion



















































































































































































































































































































































































